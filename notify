local BrizzyWareNotify = Instance.new("ScreenGui")
local Holder = Instance.new("Frame")
local UIListLayout = Instance.new("UIListLayout")
local UIAspectRatioConstraint_4 = Instance.new("UIAspectRatioConstraint")

BrizzyWareNotify.Name = "BrizzyWareNotify"
BrizzyWareNotify.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
BrizzyWareNotify.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

Holder.Name = "Holder"
Holder.Parent = BrizzyWareNotify
Holder.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
Holder.BackgroundTransparency = 1.000
Holder.BorderColor3 = Color3.fromRGB(27, 42, 53)
Holder.Position = UDim2.new(0.829854548, 0, 0.0432835817, 0)
Holder.Size = UDim2.new(0.160025299, 0, 0.914925396, 0)

UIListLayout.Parent = Holder
UIListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.VerticalAlignment = Enum.VerticalAlignment.Bottom
UIListLayout.Padding = UDim.new(0, 4)

UIAspectRatioConstraint_4.Parent = Holder
UIAspectRatioConstraint_4.AspectRatio = 0.413

return function(titletxt, messagetxt, waittime)
	local notify = Instance.new("Frame")
	local UICorner = Instance.new("UICorner")
	local title = Instance.new("TextLabel")
	local UIAspectRatioConstraint = Instance.new("UIAspectRatioConstraint")
	local message = Instance.new("TextLabel")
	local UIAspectRatioConstraint_2 = Instance.new("UIAspectRatioConstraint")
	local UIAspectRatioConstraint_3 = Instance.new("UIAspectRatioConstraint")
	
	notify.Name = "notify"
	notify.Parent = Holder
	notify.BackgroundTransparency = 1
	notify.BackgroundColor3 = Color3.fromRGB(57, 57, 57)
	notify.Position = UDim2.new(0, 0, 0.928221881, 0)
	notify.Size = UDim2.new(1, 0, 0.071778141, 0)

	UICorner.CornerRadius = UDim.new(0, 5)
	UICorner.Parent = notify

	title.Name = "title"
	title.Parent = notify
	title.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
	title.BackgroundTransparency = 1.000
	title.Position = UDim2.new(0.0276679844, 0, -0.0162339639, 0)
	title.Size = UDim2.new(0.944664061, 0, 0.5, 0)
	title.Font = Enum.Font.Gotham
	title.Text = tostring(titletxt)
	title.TextColor3 = Color3.fromRGB(255, 255, 255)
	title.TextSize = 17.000
	title.TextTransparency = 1
	title.TextWrapped = true
	title.TextXAlignment = Enum.TextXAlignment.Left
	title.TextYAlignment = Enum.TextYAlignment.Bottom

	UIAspectRatioConstraint.Parent = title
	UIAspectRatioConstraint.AspectRatio = 10.864

	message.Name = "message"
	message.Parent = notify
	message.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
	message.BackgroundTransparency = 1.000
	message.Position = UDim2.new(0.0276679844, 0, 0.483766049, 0)
	message.Size = UDim2.new(0.944664061, 0, 0.5, 0)
	message.Font = Enum.Font.Gotham
	message.Text = tostring(messagetxt)
	message.TextTransparency = 1
	message.TextColor3 = Color3.fromRGB(200, 200, 200)
	message.TextSize = 14.000
	message.TextWrapped = true
	message.TextXAlignment = Enum.TextXAlignment.Left

	UIAspectRatioConstraint_2.Parent = message
	UIAspectRatioConstraint_2.AspectRatio = 10.864

	UIAspectRatioConstraint_3.Parent = notify
	UIAspectRatioConstraint_3.AspectRatio = 5.750

	local function DMMLZ_fake_script()
		local script = Instance.new('LocalScript', notify)

		local gui = script.Parent
		game:GetService("TweenService"):Create(gui, TweenInfo.new(2), {BackgroundTransparency = 0}):Play()
		for i, v in pairs(gui:GetDescendants()) do
			if v:IsA("TextLabel") then
				game:GetService("TweenService"):Create(v, TweenInfo.new(2), {TextTransparency = 0}):Play()
			end
		end
		repeat task.wait() until gui.BackgroundTransparency == 0
		
		task.wait(waittime)
		
		game:GetService("TweenService"):Create(gui, TweenInfo.new(2), {BackgroundTransparency = 1}):Play()
		for i, v in pairs(gui:GetDescendants()) do
			if v:IsA("TextLabel") then
				game:GetService("TweenService"):Create(v, TweenInfo.new(2), {TextTransparency = 1}):Play()
			end
		end
		repeat task.wait() until gui.BackgroundTransparency == 1
		task.wait(1)
		gui:Destroy()
	end
	coroutine.wrap(DMMLZ_fake_script)()
end
